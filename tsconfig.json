{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["src"],
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "preserveSymlinks": true
  },
  "exclude": [
    "./dist", 
    "node_modules"
  ],
  "include": [
    "test/**/*.ts",
    "src",
    "src/core.ts"
  ]
}
