{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["src"],
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "./test",
    "src", 
    "src/core.ts"
  ]
}
